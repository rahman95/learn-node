mixin storeForm(store = {})
    form(action=`/add/${store._id || ''}` method='POST' class='card' enctype='multipart/form-data')
      label(for='name') Name
      input(type='text' name='name' value=store.name)

      label(for='description') Description
      textarea(name='description') #{store.description}

      label(for='photo') Photo
      input(type='file' name='photo' accept='image/gif, image/png, image/jpeg')

      if store.photo
        img(src=`/uploads/${store.photo}` alt=store.name width=200)

      label(for='address') Address
      input(type='text' id='address' name='location[address]' value=(store.location && store.location.address) required)

      label(for='lng') Address Lng
      input(type='text' id='lng' name='location[coordinates][0]' value=(store.location && store.location.coordinates[0]) required readonly)

      label(for='lat') Address Lat
      input(type='text' id='lat' name='location[coordinates][1]' value=(store.location && store.location.coordinates[1]) required readonly)

      ul.tags(style='padding-top: 2rem;')
        - const tags = store.tags || []
        each choice in ['Wi-Fi', 'Open Late', 'Family Friendly', 'Vegatarian', 'Licensed']
          .tag.tag__choice
            input(type='checkbox' id=choice value=choice name='tags' checked=(tags.includes(choice)))
            label(for=choice) #{choice}

      input(type='submit' value='Save â†’' class='button')